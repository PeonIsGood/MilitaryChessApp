<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#62fd62" />
            <corners android:radius="6dp" />

        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="2dp" android:right="2dp" android:top="2dp" android:left="2dp">
        <shape>
            <gradient
                android:startColor="#426f42"
                android:endColor="#215e21"
                android:type="linear"
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5" />

            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />

            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>